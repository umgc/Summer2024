import 'api_client.dart';
import 'api_response.dart';
import 'moodle_connection.dart';
import 'moodle_accessor.dart';

class MoodleConnectionImpl implements MoodleConnection {
  final MoodleAccessor _moodleAccessor;

  MoodleConnectionImpl(this._moodleAccessor);

  @override
  Future<ApiResponse<List<dynamic>>> getCourses() async {
    return _moodleAccessor.getCourses();
  }

  @override
  Future<ApiResponse<Map<String, dynamic>>> getUser(int userId) async {
    return _moodleAccessor.getUser(userId);
  }

  @override
  Future<ApiResponse<void>> uploadAssessment(Map<String, dynamic> assessmentData) async {
    return _moodleAccessor.uploadAssessment(assessmentData);
  }

  @override
  Future<ApiResponse<Map<String, dynamic>>> getAssessment(int assessmentId) async {
    return _moodleAccessor.getAssessment(assessmentId);
  }
}